<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <MudAlert Severity="Severity.Info">Determining session state, please wait...</MudAlert>
                </Authorizing>
                <NotAuthorized>
                    <MudText Typo="Typo.h3" GutterBottom="true">Sorry</MudText>
                    <MudAlert Severity="Severity.Error">You're not authorized to reach this page. You need to log in.</MudAlert>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudAlert Severity="Severity.Error">Sorry, there's nothing at this address.</MudAlert>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>